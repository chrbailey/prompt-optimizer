{
  "name": "prompt-optimizer",
  "version": "1.0.0",
  "description": "Deterministic prompt quality scoring for CI/CD. The only tool that gives you the same score every time.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "prompt-optimizer": "dist/cli/index.js",
    "popt": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "dev": "tsx src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "prompt-engineering",
    "prompt-optimizer",
    "llm",
    "ai",
    "quality-gate",
    "ci-cd",
    "github-action",
    "deterministic-scoring",
    "prompt-scoring",
    "prompt-evaluation",
    "anthropic",
    "openai",
    "gemini",
    "claude",
    "gpt",
    "typescript",
    "cli"
  ],
  "author": "Christopher Bailey",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@google/generative-ai": "^0.21.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.0",
    "openai": "^4.70.0",
    "ora": "^8.1.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chrbailey/prompt-optimizer.git"
  },
  "bugs": {
    "url": "https://github.com/chrbailey/prompt-optimizer/issues"
  },
  "homepage": "https://github.com/chrbailey/prompt-optimizer#readme"
}
